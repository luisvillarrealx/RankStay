@model RankStay_Web.Entities.PropertyObj

<!-- Register Province Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-lg-6 wow fadeInUp card p-5" data-wow-delay="0.5s">
                <h2 class="mb-4">Agregar nueva propiedad</h2>
                @using (Html.BeginForm("RegisterProperty", "Property", FormMethod.Post, new { @class = "form-box px-3" }))
                {
                    <div class="row g-3">
                        <div class="col-sm-12">
                            <div class="form-floating">
                                @Html.TextBoxFor(m => m.PropertyProvinceId, new
                            {
                            @class = "form-control",
                            @name="province",
                            @placeholder="Provincia",
                            @id="province",
                            @required = true
                            })
                                <label for="province">Provincia</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating">
                                @Html.TextBoxFor(m => m.PropertyName, new
                            {
                            @class = "form-control",
                            @name="property",
                            @placeholder="Nombre de la propiedad",
                            @id="property",
                            @required = true
                            })
                                <label for="PropertyName">Nombre de la propiedad</label>
                            </div>
                        </div>
                        <div class="col-12 text-center">
                            <button class="btn btn-primary w-100 py-3" type="submit">Agregar</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- Register Province Start -->