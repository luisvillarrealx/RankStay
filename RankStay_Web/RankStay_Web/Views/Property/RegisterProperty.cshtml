@model RankStay_Web.Entities.PropertyObj

<div class="container-xxl py-5">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-lg-6 wow fadeInUp card p-5" data-wow-delay="0.5s">
                <h2 class="mb-4">Agregar nueva propiedad</h2>
                <form method="post" asp-action="RegisterProperty" asp-controller="Property" class="form-box px-3">
                    <div class="row g-3">
                        <div class="col-sm-12">
                            <div class="form-floating">
                                <select asp-for="PropertyProvinceId" class="form-control" name="propertyObj.PropertyProvinceId" id="province" required>
                                    <option value="1">San José</option>
                                    <option value="2">Alajuela</option>
                                    <option value="3">Cartago</option>
                                    <option value="4">Heredia</option>
                                    <option value="5">Guanacaste</option>
                                    <option value="6">Puntarenas</option>
                                    <option value="7">Limón</option>
                                </select>
                                <label asp-for="PropertyProvinceId">Selecciona una provincia</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating">
                                <input asp-for="PropertyName" class="form-control" name="propertyObj.PropertyName" placeholder="Nombre de la propiedad" id="property" required />
                                <label asp-for="PropertyName">Nombre de la propiedad</label>
                            </div>
                        </div>
                        <div class="col-12 text-center">
                            <button class="btn btn-primary w-100 py-3" type="submit">Agregar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>