@model RankStay_Web.Entities.UserObj;

<div class="container-xxl py-5">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-lg-6 wow fadeInUp card p-5" data-wow-delay="0.5s">
                <h2 class="mb-4">Editar usuario</h2>
                <form method="post" asp-action="EditUser" asp-controller="User" class="form-box px-3">
                    <div class="row g-3">
                        <div class="col-sm-12">
                            <div class="form-floating">
                                <input asp-for="UserId" name="userObj.UserId" class="form-control" required />
                                <input type="hidden" id="UserId" name="UserId" value="@Model.UserId" />
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating">
                                <input asp-for="UserName" class="form-control" name="userObj.UserName" placeholder="Nombre" id="userName" required />
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating">
                                <input asp-for="UserLastName1" class="form-control" name="userObj.UserLastname1" placeholder="Nombre" id="userName" required />
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating">
                                <input asp-for="UserLastName2" class="form-control" name="userObj.UserLastname2" placeholder="Nombre" id="userName" required />
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating">
                                <select asp-for="UserRole" class="form-control" name="userObj.UserRole" id="userRole" required>
                                    <option value="">Seleccione una provincia</option>
                                    <option value="1">Admin</option>
                                    <option value="2">Usuario</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-12 text-center">
                            <button class="btn btn-primary w-100 py-3" type="submit">Guardar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>