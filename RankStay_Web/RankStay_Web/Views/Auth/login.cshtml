@model RankStay_Web.Entities.UserObj

@{
    Layout = "_LayoutAuth";
}

<div class="container">
    <div class="row px-3">
        <div class="col-lg-10 col-xl-9 card flex-row mx-auto px-0">
            <div class="img-left d-none d-md-flex"></div>
            <div class="card-body">
                <h4 class="title text-center mt-4">Iniciar sesión</h4>
                <form asp-action="Login" method="post" class="form-box px-3">
                    <div class="form-input">
                        <span><i class="fa fa-envelope-o"></i></span>
                        <input asp-for="UserEmail" class="form-control" placeholder="Correo electrónico" required />
                    </div>
                    <div class="form-input">
                        <span><i class="fa fa-key"></i></span>
                        <input asp-for="UserPassword" class="form-control" placeholder="Contraseña" type="password" required />
                    </div>
                    <div class="mb-4">
                        <button type="submit" class="btn btn-block text-uppercase">Iniciar sesión</button>
                    </div>
                    <div class="text-right mb-3">
                        <a asp-action="Forgot" asp-controller="Auth" class="forget-link">Olvidé mi contraseña</a>
                    </div>
                    <hr class="my-4">
                    <div class="text-center mb-2">Aún no tienes cuenta?
                        <a asp-action="Signup" asp-controller="Auth" class="register-link">Regístrate aquí</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>