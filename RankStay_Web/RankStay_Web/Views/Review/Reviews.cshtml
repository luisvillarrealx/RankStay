@model IEnumerable<RankStay_Web.Entities.ReviewObj>

<section class="content mt-5">
    <div class="container-fluid mt-5">
        <div class="row">
            <div class="col-12">
                <div class="card mb-5">
                    <div class="card-header">
                        <h3 class="card-title">Registro de Reseñas</h3>
                    </div>
                    <div class="card-body table-responsive">
                        <div class="pb-2">
                            <a asp-action="RegisterReview" asp-controller="Review" class="btn btn-primary ml-auto">Agregar</a>
                        </div>
                        <table id="Table" class="table table-bordered table-hover table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Propiedad</th>
                                    <th>Comentario</th>
                                    <th>Calificación</th>
                                    <th class="text-center">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.ReviewId)</td>
                                        <td>@item.PropertyName)</td>
                                        <td>@item.ReviewComment)</td>
                                        <td>@item.ReviewStar)</td>
                                        <td class="text-center">>></td>
                                        @*
                                        <td class="text-center col-1">
                                        <a asp-action="EditUser" asp-controller="User" asp-route-ID="@item.userId" class="btn btn-primary px-2">
                                        <i class="fas fa-angle-double-right"></i>
                                        </a>
                                        </td>
                                        *@
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>