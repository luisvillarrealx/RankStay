@model RankStay_Web.Entities.ReviewObj

<!-- Register Review Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-lg-6 wow fadeInUp card p-5" data-wow-delay="0.5s">
                <h2 class="mb-4">Nueva reseña</h2>
                <form asp-action="RegisterReview" method="post" class="form-box px-3">
                    <div class="row g-3">
                        <div class="col-sm-12">
                            <div class="form-floating">
                                <input asp-for="ReviewPropertyId" type="number" class="form-control" name="reviewPropertyId" placeholder="Propiedad" required />
                                <label for="reviewPropertyId">Propiedad</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating">
                                <input asp-for="ReviewStar" type="number" class="form-control" name="reviewStar" placeholder="Calificación" required />
                                <label for="reviewStar">Calificación</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating">
                                <textarea asp-for="ReviewComment" style="height: 100px;" class="form-control" name="reviewComment" placeholder="Comentario" required rows="50" cols="40"></textarea>
                                <label for="reviewComment">Comentario</label>
                            </div>
                        </div>
                        <div class="col-12 text-center">
                            <button class="btn btn-primary w-100 py-3" type="submit">Agregar</button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
<!-- Register Review Start -->