@model RankStay_Web.Entities.ProvinceObj;


<div class="container-xxl py-5">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-lg-6 wow fadeInUp card p-5" data-wow-delay="0.5s">
                <h2 class="mb-4">Editar Provincia</h2>
                <form method="post" asp-action="EditProvince" asp-controller="Province" class="form-box px-3">
                    <div class="row g-3">
                        <div class="col-sm-12">
                            <div class="form-floating">
                                <input type="hidden" id="ProvinceId" name="ProvinceId" value="@Model.ProvinceId" />
                                <input asp-for="ProvinceId" name="provinceObj.ProvinceId" class="form-control" required />
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating">
                                <input asp-for="ProvinceName" class="form-control" name="provinceObj.ProvinceName" placeholder="Nombre" id="ProvinceName" required />
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating">
                                <input asp-for="ProvinceDescription" class="form-control" name="provinceObj.ProvinceDescription" placeholder="Descripción" id="ProvinceDescription" required />
                            </div>
                        </div>
                        <div class="col-12 text-center">
                            <button class="btn btn-primary w-100 py-3" type="submit">Guardar</button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>